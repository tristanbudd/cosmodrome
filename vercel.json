{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^(?!/api/)(.*)$",
      "dest": "/public/$1"
    },
    {
      "src": "^(.*)$",
      "dest": "/api/index.php"
    }
  ]
}
